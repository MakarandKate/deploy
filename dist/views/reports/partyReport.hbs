<div class="container">
    <div class="card-wrapper">
        <div class="business-logo">
            <img src="{{data.profile.logoLink}}">
            <p>{{ data.profile.legalName }}</p>
        </div>
        <p class="header-wrapper">Party Statement Report</p>

        <div class="blue-color">
            <p>To</p>
            <p class="margin-bottom10 font-size18">{{ data.partyReportData.party.name }}</p>
        </div>
        <div class="center1">
            <div class="flex space-b">
                <span>Start Date <br>{{ data.partyReportData.startTime }}</span>
                <span>End Date <br>{{ data.partyReportData.endTime }}</span>
            </div>
            <div class="flex d-col">
                <div class="r-c">
                    <span>Total Sale Amount</span>
                    <p class="amt"> &#8377; {{ data.partyReportData.totalSalesAmount }}</p>
                </div>
                <div class="r-c">
                    <span>Total Purchase Amount</span>
                    <p class="amt"> &#8377; {{ data.partyReportData.totalPurchasesAmount }}</p>
                </div>
                <div class="r-c">
                    <span>Total Money In Amount</span>
                    <p class="amt"> &#8377; {{ data.partyReportData.totalMoneyInsAmount }}</p>
                </div>
                <div class="r-c">
                    <span>Total Money Out Amount</span>
                    <p class="amt"> &#8377; {{ data.partyReportData.totalMoneyOutsAmount }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h1 style="color: white;">Party Statement Report</h1>
        <table class="main-table" width="100%">
            <thead>
                <th>Date</th>
                <th>TXN Type</th>
                <th>Invoice/Bill</th>
                <th>Credit</th>
                <th>Debit</th>
            </thead>
            <tbody>
                {{#each data.partyReportData.records}}
                    <tr>
                        <td>{{ dateToDDMMYYY this.record.billDateStamp }}</td>
                        <td>{{ this.txnType }}</td>
                        <td>{{ this.record.billNo }}</td>
                        {{#if isPurchaseMoneyIn this.txnType}}
                            <td>{{ this.record.totalAmount }}</td>
                        {{else}}
                            0
                        {{/if}}
                        
                        {{#if isSaleMoneyOut this.txnType}}
                            <td>{{ this.record.totalAmount }}</td>
                        {{else}}
                            0
                        {{/if}}
                    </tr>
                    <tr *ngIf="record?.record?.billItems?.length">
                        <td width="10%"></td>
                        <td width="90%" colspan="4">
                            <table class="sub-table" width="100%">
                                <thead>
                                    <th>#</th>
                                    <th>Item Name</th>
                                    <th>Qty</th>
                                    <th>Unit</th>
                                    <th>Rs/Unit</th>
                                    <th>Amount</th>
                                </thead>
                                <tbody>
                                    {{#each this.record.billItems}}
                                        <tr>
                                            <td>{{ inc @index }}</td>
                                            <td>{{ this.item.itemName }}</td>
                                            <td>{{ this.quantity }}</td>
                                            <td>{{ this.unit }}</td>
                                            <td>{{ this.price }}</td>
                                            <td>{{ this.total }}</td>
                                        </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>