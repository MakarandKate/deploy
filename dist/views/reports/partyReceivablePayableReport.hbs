<style>
    h5 {
        font-size: 22px;
    }

    .header-wrapper {
        border-radius: 3px;
        background: linear-gradient(66deg, #311b92, #3618b8, #5332e3);
        margin: auto;
        border: 1px solid rgb(20, 20, 19);
        padding: 3px;
        text-align: center;
        color: #fff;
        font-weight: bold;
    }

    .center1 {
        border-radius: 10px;
        background: #faf9ff;
        margin: auto;
        width: 90%;
        border: 1px solid rgb(181, 179, 191);
        padding: 10px;
        margin-bottom: 10px;
    }

    .margin-bottom10 {
        margin-bottom: 10px;
    }

    p {
        margin: 0 0 0px;
        font-size: 16px;
    }

    .date {
        font-size: 12px;
    }

    .btn {
        margin-bottom: 5px;
        width: 256px;
    }

    .closebtn {
        margin-left: 15px;
        color: #46763d;
        font-weight: bold;
        float: right;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

    .alert {
        transition: 0.5s ease-out;
        position: fixed;
        width: 85%;
        bottom: 50px;
        color: green;
        background: #f9fff2;
    }

    .snackbar-holder {
        position: fixed;
        bottom: -300px;
        left: 0px;
        min-height: 30px;
        max-height: 100px;
        z-index: 99999;
        width: 100%;
        padding: 20px;
        opacity: 0;
        transition: 0s all linear;
        color: #46763d;
    }

    .report-font-weight {
        font-weight: 700;
    }

    .font-size20 {
        font-size: 20px;
    }

    .font-size18 {
        font-size: 18px;
    }


    .main-table {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    .main-table td,
    .main-table th {
        border: 1px solid #ddd;
        padding: 8px;
    }

    .main-table tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .main-table tr:hover {
        background-color: #F5F5F5;
    }

    .main-table th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #3E80ED;
        color: white;
    }
</style>

<div class="container">
    <p class="margin-bottom10 font-size20">
        <img src="{{data.profile.logoLink}}" width="80" height="80" style="border-radius: 50%;">
        {{ data.profile.legalName }}
    </p>
    <p class="header-wrapper margin-bottom10">Payable Receivable Report</p>

    <div class="center1">
        <p>Total Parties : {{ add data.partyReceivablePayableReportData.customerRecords.length data.partyReceivablePayableReportData.supplierRecords.length }}</p>
        <p>Total Payable Amount : &#8377; {{ data.partyReceivablePayableReportData.totalPayableAmount }}</p>
        <p>Total Receivable Amount : &#8377; {{ data.partyReceivablePayableReportData.totalReceivableAmount }}
        </p>
    </div>

    <div class="container">
        <h1>Payable Receivable Report</h1>
        <table class="main-table" width="100%">
            <thead>
                <th>Sr No</th>
                <th>Customer Name</th>
                <th>Customer Phone</th>
                <th>Payable Amount</th>
                <th>Receivable Amount</th>
            </thead>
            <tbody>
                {{#each data.partyReceivablePayableReportData.customerRecords}}
                    <tr>
                        <td>{{ inc @index }}</td>
                        <td>{{ this.party.name }}</td>
                        <td>{{ this.party.phone }}</td>
                        <td>{{ this.payableAmount }}</td>
                        <td>{{ this.receivableAmount }}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <hr>
        <table class="main-table" width="100%">
            <thead>
                <th>Sr No</th>
                <th>Supplier Name</th>
                <th>Supplier Phone</th>
                <th>Payable Amount</th>
                <th>Receivable Amount</th>
            </thead>
            <tbody>
                {{#each data.partyReceivablePayableReportData.supplierRecords}}
                    <tr>
                        <td>{{ inc @index }}</td>
                        <td>{{ this..party.name }}</td>
                        <td>{{ this..party.phone }}</td>
                        <td>{{ this..payableAmount }}</td>
                        <td>{{ this..receivableAmount }}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>