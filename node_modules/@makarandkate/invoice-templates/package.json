{
  "name": "@makarandkate/invoice-templates",
  "version": "7.5.13",
  "description": "",
  "main": "lib/index.js",
  "types": "lib",
  "scripts": {
    "build": "tsc -p .",
    "copy-public": "rm -f -R  lib/public && cp -R src/public lib/",
    "copy-views": "rm -f -R  lib/views && cp -R src/views lib/",
    "twatch": "tsc-watch --onSuccess \"node ./lib/server.js\"",
    "views-watch": "chokidar \"src/**/*.hbs\" \"src/public/**/*.*\" -c \"npm run copy-views  && npm run copy-public\"",
    "dev": "concurrently \"npm run twatch\" \"npm run views-watch\"",
    "release": "npm run build && npm publish --access public"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.37",
    "nodemon": "^2.0.7",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-handlebars": "^5.3.0",
    "qrcode": "^1.4.4",
    "tsc-watch": "^6.0.4"
  }
}
